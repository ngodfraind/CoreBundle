<div class="content-6">
    <div class="alert alert-default" data-name="{{ type.name }}" data-id="{{ type.id }}" style="position:relative">
        {% if type.name != 'home' and type.name != 'menu' %}
            <div class="dropdown float-right-top">
                <button class="btn btn-link dropdown-toggle" type="button" data-toggle="dropdown">
                    <i class="fa fa-chevron-down"></i>
                </button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li role="presentation">
                        <a class="pointer-hand type-rename" role="menuitem"><i class="fa fa-fw fa-pencil"></i> {{ 'rename' | trans({}, 'platform') }}</a>
                    </li>
                    <li role="presentation">
                        <a class="pointer-hand type-delete" role="menuitem"><i class="fa fa-fw fa-trash-o"></i> {{ 'delete' | trans({}, 'platform') }}</a>
                    </li>
                </ul>
            </div>
        {% endif %}
        <strong><a class="alert-link" href="{{ ("type/" ~ type.name) | homeLink }}">{{ type.name }}</a></strong>
    </div>
</div>
